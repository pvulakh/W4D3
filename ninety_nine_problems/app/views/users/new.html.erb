<form action="<%= users_url %>" method="POST">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <label for="user_name">Username:
    <input type="text" id="user_name" name="user[user_name]" value="">
  </label>
  <br>
  <label for="password">Password (must be >6 characters):
    <input type="text" id="password" name="user[password]" value="">
  </label>

  <input type="submit" value="Sign up!">
</form>